extends layout

block content
  h1 Users List
  if users && users.length > 0
    table.table.table-striped
      thead.thead-dark
        tr
          th First Name
          th Last Name
          th Date of Birth
          th Address 1
          th Address 2
          th City
          th Postal Code
          th Country
          th Phone Number
          th Email
          th Notes
      tbody
        each user in users
          tr
            td= user.firstName
            td= user.lastName
            td= user.dateOfBirth.toISOString().split('T')[0]
            td= user.address1
            td= user.address2
            td= user.city
            td= user.postalCode
            td= user.country
            td= user.phoneNumber
            td= user.email
            td= user.notes
  else
    p No users found